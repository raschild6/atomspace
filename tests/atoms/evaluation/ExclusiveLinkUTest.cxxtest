#include <opencog/atomspace/AtomSpace.h>
#include <opencog/atoms/execution/EvaluationLink.h>
#include <opencog/atoms/truthvalue/TruthValue.h>

using namespace opencog;

class ExclusiveLinkUTest :  public CxxTest::TestSuite
{
private:
	AtomSpace _as;

public:
	ExclusiveLinkUTest()
	{
		logger().set_print_to_stdout_flag(true);
		logger().set_timestamp_flag(false);
		logger().set_sync_flag(true);
	}

	void setUp() {}

	void tearDown() {}

	void test_exclusive();
};

#define N _as.add_node
#define L _as.add_link

// Basic test
void ExclusiveLinkUTest::test_exclusive()
{
	logger().info("BEGIN TEST: %s", __FUNCTION__);

	Handle A = N(CONCEPT_NODE, "A");
	Handle B = N(CONCEPT_NODE, "B");
	Handle C = N(CONCEPT_NODE, "C");
	Handle D = N(CONCEPT_NODE, "D");
	Handle S = L(EXCLUSIVE_LINK, A, B, C, D);
	Handle T = L(EXCLUSIVE_LINK, A, B, C, A);


	TruthValuePtr tvp = EvaluationLink::do_evaluate(&_as, S);
	printf("Got tvp=%s\n", tvp->to_string().c_str());
	TS_ASSERT_EQUALS(tvp, TruthValue::TRUE_TV());

	tvp = EvaluationLink::do_evaluate(&_as, T);
	TS_ASSERT_EQUALS(tvp, TruthValue::FALSE_TV());

	logger().info("END TEST: %s", __FUNCTION__);
}
